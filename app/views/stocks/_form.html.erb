<%= form_for(@stock) do |f| %>
  <% if @stock.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@stock.errors.count, "error") %> prohibited this stock from being saved:</h2>

      <ul>
      <% @stock.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Nome" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :initial_income, "Valor do Invest. Inicial" %><br>
    <%= f.number_field :initial_income, :step => 0.01 %>
  </div>
  <div class="field">
    <%= f.label :current_income, "Valor Atual" %><br>
    <%= f.number_field :current_income, :step => 0.01 %>
  </div>
  <div class="field">
    <%= f.label :buy_date, "Data de Compra" %><br>
    <%= f.datetime_select :buy_date %>
  </div>
  <div class="field">
    <%= f.label :buy_tax, "Taxa de Compra" %><br>
    <%= f.number_field :buy_tax, :step => 0.01 %>
  </div>
  <div class="field">
    <%= f.label :amount, "Quantidade" %><br>
    <%= f.number_field :amount %>
  </div>
  <div class="field">
    <%= f.label :wallet_id, "Carteira" %><br>
    <%= f.number_field :wallet_id %>
  </div>
  <div class="actions">
    <%= f.submit "Enviar" %>
  </div>
<% end %>
