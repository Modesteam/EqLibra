<p id="notice"><%= notice %></p>

<h1>Tesouro Direto</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Data de Compra</th>
      <th>Data de Vencimento</th>
      <th>Valor do Investimento</th>
      <th>Taxa de Aquisição</th>
      <th>Taxa Administrativa</th>
      <th>Carteira</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @direct_treasuries.each do |direct_treasury| %>
      <tr>
        <td><%= direct_treasury.title %></td>
        <td><%= direct_treasury.buyDate %></td>
        <td><%= direct_treasury.dueDate %></td>
        <td><%= direct_treasury.investment_value %></td>
        <td><%= direct_treasury.acquisitionsTax %></td>
        <td><%= direct_treasury.admTax %></td>
        <td><%= direct_treasury.wallet.name %></td>
        <td><%= link_to 'Exibir', direct_treasury %></td>
        <td><%= link_to 'Editar', edit_direct_treasury_path(direct_treasury) %></td>
        <td><%= link_to 'Apagar', direct_treasury, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Tesouro Direto', new_direct_treasury_path %>
<br>
<%= link_to 'Voltar', wallets_path %>
