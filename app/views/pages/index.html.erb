<% content_for :top_content do %>

<div class="container">
	<h1>Bem vindo</h1>
	<p>
		Crie uma conta no sistema:
	</p>
	<p>
		<%= link_to 'Registro', new_user_registration_path, class: 'btn btn-primary btn-lg' %>
	</p>
</div>

<% end %>

<% content_for :top_navBar do %>

<nav class="top-bar" data-topbar role="navigation">
	<ul class="title-area">
		<li class="name">
			<h1><a href=<% root_path %>>EqLibra</a></h1>
		</li>
		<!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
		<li class="toggle-topbar menu-icon">
			<a href="#"><span>Menu</span></a>
		</li>
	</ul>
	<section class="top-bar-section">
		<!-- Right Nav Section -->
		<ul class="right">
			<li class="active">
				<a href="#">Sobre</a>
			</li>
			<li class="has-dropdown">
				<% if user_signed_in? %>
				<a href=""><%= current_user.name %></a>
				<ul class="dropdown">
					<li class="active">
						<%= link_to 'Perfil', edit_user_registration_path %>						
					</li>
					<li>
						<%= link_to 'Log out', destroy_user_session_path, method: :delete %>
					</li>
				</ul>
			</li>
			<% end %>
		</ul>
		<!-- Left Nav Section -->
		<ul class="left">
			<li>
				<a href="#">Left Nav Button</a>
			</li>
		</ul>
	</section>
</nav>

<% end %>
