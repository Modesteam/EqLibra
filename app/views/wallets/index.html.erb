<p id="notice"><%= notice %></p>

<h1>Listing Wallets</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Fundos de Inv.</th>
      <th>Bolsa de Val.</th>
      <th>Câmbios</th>
      <th>Tesouro Direto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @wallets.each do |wallet| %>
    <tr>
        <td><%= wallet.name %>
        <td><%= wallet.comments %></br>

        <td><%= link_to 'Fundos de Investimento', investment_funds_path(:wallet_id => "#{wallet.id}") %></td>
        <td><%= link_to 'Bolsa de Valores', stocks_path(:wallet_id => "#{wallet.id}") %></td>
        <td><%= link_to 'Câmbios', exchanges_path(:wallet_id => "#{wallet.id}") %></td>
        <td><%= link_to 'Tesouro Direto', direct_treasuries_path(:wallet_id => "#{wallet.id}") %></td>
        <td><%= link_to 'Show', wallet %></td>
        <td><%= link_to 'Edit', edit_wallet_path(wallet) %></td>
        <td><%= link_to 'Destroy', wallet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>

   </tbody>

</table>

<br>

