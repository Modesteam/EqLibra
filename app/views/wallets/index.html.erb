<p id="notice"><%= notice %></p>

<h1>Carteiras de Investimento</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Fundos de Inv.</th>
      <th>Bolsa de Val.</th>
      <th>Câmbios</th>
      <th>Tesouro Direto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @wallets.each do |wallet| %>
      <tr>
        <td><%= wallet.name %></td>
        <td><%= wallet.comments %></td>

        <td><%= link_to 'Fundos de Inv.', investment_funds_path(:wallet_id => "#{wallet.id}") %></td>
        <td><%= link_to 'Bolsa de Val.', stocks_path(:wallet_id => "#{wallet.id}") %></td>
        <td><%= link_to 'Câmbios', exchanges_path(:wallet_id => "#{wallet.id}") %></td>
        <td><%= link_to 'Tesouro Direto', direct_treasuries_path(:wallet_id => "#{wallet.id}") %></td>
        <td><%= link_to 'Exibir', wallet %></td>
        <td><%= link_to 'Editar', edit_wallet_path(wallet) %></td>
        <td><%= link_to 'Apagar', wallet, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>

  
</table>

<br>

<%= link_to 'Nova Carteira', new_wallet_path %>
